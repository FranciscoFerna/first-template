    </section>
  </main>

  <Footer
    companyName={footer.companyName}
    tagline={footer.tagline}
    navLinks={footer.navLinks}
    contactInfo={footer.contactInfo}
  />

  <FloatingButtons
    whatsappNumber={floatingButtons.whatsapp.number}
    email={floatingButtons.email.address}
  />
</Layout>
