      <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-16">Tres pasos para el √©xito</h2>

        <div class="relative">
          <!-- L√≠nea conec tora -->
          <div class="hidden md:block absolute top-16 left-0 right-0 h-1 bg-gradient-to-r from-green-400 to-blue-500"></div>

          <div class="grid md:grid-cols-3 gap-8 relative z-10">
            {[
              { title: "1. An√°lisis Gratuito", desc: "Evaluamos tu negocio en 30 mins sin costo" },
              { title: "2. Plan Personalizado", desc: "Recetas soluci√≥n IA a tu medida" },
              { title: "3. Implementaci√≥n", desc: "Deploy en 2-4 semanas, ROI garantizado" }
            ].map((step) => (
              <div class="bg-white p-8 rounded-xl shadow-lg border-t-4 border-green-500 text-center hover:shadow-xl transition-shadow">
                <h3 class="text-xl font-bold text-gray-900 mb-2">{step.title}</h3>
                <p class="text-gray-600">{step.desc}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- ========== TESTIMONIOS ROBUSTO ========== -->
    <section id="testimonios" class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-16">Lo que dicen nuestros clientes</h2>

        <div class="grid md:grid-cols-3 gap-8">
          {testimonials.items.map((testimonial) => (
            <div class="bg-gray-50 p-8 rounded-xl shadow-md hover:shadow-lg transition-shadow border-l-4 border-green-500">
              <div class="flex text-yellow-400 mb-4 text-xl">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>
              <p class="text-gray-700 leading-relaxed mb-6 italic">"{testimonial.quote}"</p>
              <div class="flex items-center">
                <img
                  src={testimonial.avatar}
                  alt={testimonial.author}
                  class="w-12 h-12 rounded-full object-cover mr-4 border-2 border-green-500"
                />
                <div>
                  <p class="font-bold text-gray-900">{testimonial.author}</p>
                  <p class="text-sm text-gray-600">{testimonial.role}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ========== CTA FINAL EXPLOSIVO ========== -->
    <section class="py-20 bg-gradient-to-r from-green-600 to-blue-600 text-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-10 w-96 h-96 bg-white rounded-full mix-blend-multiply filter blur-3xl"></div>
      </div>

      <div class="relative max-w-3xl mx-auto px-4 text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">{cta.title}</h2>
        <p class="text-xl text-green-100 mb-8">{cta.subtitle}</p>
        <p class="text-lg font-bold mb-8 text-yellow-300 animate-pulse">{cta.urgency}</p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={cta.ctaHref}
            class="px-10 py-5 bg-white text-green-600 font-bold rounded-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105 text-lg"
          >
            üöÄ {cta.ctaText}
          </a>
          <a
            href={`tel:${contact.fields.phone.placeholder}`}
            class="px-10 py-5 border-2 border-white text-white hover:bg-white hover:text-green-600 transition-all rounded-lg font-bold text-lg"
          >
            ‚òéÔ∏è Llamar Ahora
          </a>
        </div>

        <!-- Garant√≠a -->
        <div class="mt-12 pt-8 border-t border-white/30">
          <p class="text-sm text-green-100">‚úì Garant√≠a de satisfacci√≥n 100% ‚Ä¢ Sin compromisos ‚Ä¢ Cancelable en cualquier momento</p>
        </div>
