      <div class="max-w-7xl mx-auto px-4">
        <div class="grid md:grid-cols-4 gap-8">
          {stats.items.map(stat => (
            <div class="text-center">
              <p class="text-5xl font-black mb-2">{stat.number}</p>
              <p class="text-green-100">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ========== C√ìMO FUNCIONA ========== -->
