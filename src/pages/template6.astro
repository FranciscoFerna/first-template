  <main class="bg-white overflow-hidden">
    <!-- ========== HERO CON URGENCIA ========== -->
    <section class="relative min-h-screen bg-gradient-to-b from-blue-600 to-blue-500 overflow-hidden flex items-center pt-20">
      <div class="absolute top-10 right-10 bg-red-500 text-white px-4 py-2 rounded-full font-bold animate-pulse">
        ‚è∞ Oferta limitada: 30% descuento
      </div>

      <div class="relative max-w-7xl mx-auto px-4 py-20 w-full">
        <div class="max-w-3xl">
          <h1 class="text-6xl md:text-7xl font-black text-white mb-6 leading-tight">
            {hero.title}
          </h1>
          <p class="text-2xl text-blue-100 mb-8 leading-relaxed">
            {hero.subtitle}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 mb-12">
            <a
              href={hero.ctaHref}
              class="px-10 py-5 bg-green-500 hover:bg-green-600 text-white font-black rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg text-lg text-center"
            >
              ‚úÖ {hero.ctaText}
            </a>
            <a
              href={hero.secondaryCtaHref}
              class="px-10 py-5 bg-white/20 hover:bg-white/30 text-white font-bold rounded-lg transition-all text-lg text-center"
            >
              {hero.secondaryCtaText}
            </a>
          </div>

          <!-- Social proof en hero -->
          <div class="flex items-center gap-4 bg-white/10 backdrop-blur px-6 py-4 rounded-lg w-fit">
            <div class="flex -space-x-2">
              {testimonials.items.slice(0, 3).map((t) => (
                <img src={t.avatar} alt="" class="w-8 h-8 rounded-full border-2 border-white" />
              ))}
            </div>
            <div>
              <p class="text-white font-bold">+500 empresas conf√≠an en nosotros</p>
              <p class="text-blue-100 text-sm">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê 4.9/5 rating</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Elemento visual derecha -->
      <div class="absolute right-0 bottom-0 w-1/2 h-1/2 bg-gradient-to-tl from-blue-400 to-transparent opacity-20 hidden md:block"></div>
    </section>

    <!-- ========== BENEFICIOS DESTACADOS ========== -->
    <section id="servicios" class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-5xl font-bold text-gray-900 mb-4">{services.title}</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">{services.subtitle}</p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {services.items.map((service, index) => (
            <div class="relative group bg-gradient-to-br from-green-50 to-blue-50 p-8 rounded-xl border-2 border-green-200 hover:border-green-500 transition-all hover:shadow-xl">
              <div class="absolute -top-4 -left-4 w-10 h-10 bg-green-500 text-white rounded-full flex items-center justify-center font-bold">
                {index + 1}
              </div>

              <div class="w-16 h-16 bg-gradient-to-br from-green-400 to-blue-500 rounded-lg flex items-center justify-center text-white text-3xl mb-4 group-hover:scale-110 transition-transform">
                {service.icon === 'design' && 'ü§ñ'}
                {service.icon === 'analytics' && 'üìä'}
                {service.icon === 'development' && '‚öôÔ∏è'}
                {service.icon === 'strategy' && 'üîç'}
                {service.icon === 'marketing' && 'üí¨'}
                {service.icon === 'seo' && 'üîó'}
              </div>

              <h3 class="text-2xl font-bold text-gray-900 mb-3">{service.title}</h3>
              <p class="text-gray-700 leading-relaxed mb-4">{service.description}</p>
              <a href="#contacto" class="text-green-600 font-bold hover:text-green-700">Conocer m√°s ‚Üí</a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ========== N√öMEROS IMPACTANTES ========== -->
