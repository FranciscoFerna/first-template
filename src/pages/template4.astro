---
/**
 * TEMPLATE 4: STARTUP MODERNO
 * Colores vibrantes, dise√±o joven, enfoque en innovaci√≥n y velocidad.
 * Perfecto para startups, SaaS y empresas tech.
 * Colores: P√∫rpura + Rosa + Azul + Gradientes
 */

import Layout from '../layouts/Layout.astro';
import { clientData } from '../data/client-data.js';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FloatingButtons from '../components/FloatingButtons.astro';
import ContactForm from '../components/ContactForm.astro';

const { hero, services, stats, testimonials, about, footer, floatingButtons, contact, cta } = clientData;
---

<Layout title={clientData.seo.title} description={clientData.seo.description}>
  <Header
    logoText="TechVision"
    navLinks={[
      { label: "Servicios", href: "#servicios" },
      { label: "Proceso", href: "#proceso" },
      { label: "Testimonios", href: "#testimonios" },
      { label: "Contacto", href: "#contacto" },
    ]}
  />

  <main class="bg-white overflow-hidden">
    <!-- ========== HERO VIBRANTE ========== -->
    <section class="relative min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50 overflow-hidden pt-20 pb-20">
      <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-l from-pink-300 to-purple-300 rounded-full blur-3xl opacity-20 animate-float"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-gradient-to-r from-blue-300 to-cyan-300 rounded-full blur-3xl opacity-20 animate-float" style="animation-delay: 1s;"></div>

      <div class="relative max-w-7xl mx-auto px-4 py-20">
        <div class="text-center max-w-4xl mx-auto">
          <!-- Badge animado -->
          <div class="mb-6 inline-block animate-bounce">
            <span class="px-4 py-2 bg-gradient-to-r from-pink-500 to-purple-500 text-white rounded-full text-sm font-bold shadow-lg">
              ‚ö° Velocidad + Innovaci√≥n + ROI
            </span>
          </div>

          <h1 class="text-6xl md:text-7xl font-black bg-gradient-to-r from-purple-600 via-pink-600 to-blue-600 bg-clip-text text-transparent mb-6 leading-tight">
            {hero.title}
          </h1>

          <p class="text-xl text-gray-700 mb-8 leading-relaxed font-light max-w-3xl mx-auto">
            {hero.subtitle}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <a
              href={hero.ctaHref}
              class="px-8 py-4 bg-gradient-to-r from-pink-500 to-purple-600 text-white font-bold rounded-xl hover:shadow-2xl transition-all duration-300 transform hover:scale-105 text-lg shadow-lg"
            >
              {hero.ctaText}
            </a>
            <a
              href={hero.secondaryCtaHref}
              class="px-8 py-4 border-2 border-gray-300 text-gray-700 hover:border-purple-500 hover:text-purple-600 hover:bg-purple-50 transition-all rounded-xl font-semibold text-lg"
            >
              {hero.secondaryCtaText}
            </a>
          </div>

          <!-- Stats inline animados -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto mt-16">
            {stats.items.map((stat, index) => (
              <div class="text-center" style={`animation-delay: ${index * 0.1}s;`}>
                <p class="text-3xl md:text-4xl font-black bg-gradient-to-r from-pink-600 to-purple-600 bg-clip-text text-transparent">
                  {stat.number}
                </p>
                <p class="text-sm text-gray-600 mt-2 font-semibold">{stat.label}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- ========== SERVICIOS EN TARJETAS ANIMADAS ========== -->
    <section id="servicios" class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-5xl font-bold text-gray-900">{services.title}</h2>
          <p class="text-lg text-gray-600 mt-4 max-w-2xl mx-auto">{services.subtitle}</p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {services.items.map((service, index) => (
            <div
              class="group relative bg-gradient-to-br from-gray-50 to-gray-100 p-8 rounded-2xl border-2 border-transparent hover:border-purple-500 transition-all duration-300 hover:shadow-xl overflow-hidden"
              style={`animation-delay: ${index * 0.1}s;`}
            >
              <div class="absolute inset-0 bg-gradient-to-r from-pink-500/10 to-purple-500/10 opacity-0 group-hover:opacity-100 transition-opacity"></div>

              <div class="relative z-10">
                <div class="w-14 h-14 bg-gradient-to-br from-pink-500 to-purple-600 rounded-xl flex items-center justify-center text-white text-3xl mb-6 group-hover:scale-110 transition-transform group-hover:rotate-6">
                  {service.icon === 'design' && 'ü§ñ'}
                  {service.icon === 'analytics' && 'üìä'}
                  {service.icon === 'development' && '‚öôÔ∏è'}
                  {service.icon === 'strategy' && 'üîç'}
                  {service.icon === 'marketing' && 'üí¨'}
                  {service.icon === 'seo' && 'üîó'}
                </div>

                <h3 class="text-2xl font-bold text-gray-900 mb-3">{service.title}</h3>
                <p class="text-gray-700 leading-relaxed">{service.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ========== PROCESO CON PASOS ========== -->
    <section id="proceso" class="py-20 bg-gradient-to-b from-purple-50 to-white">
      <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-16">Nuestro Proceso</h2>

        <div class="grid md:grid-cols-4 gap-6">
          {[
            { step: 1, title: "Diagn√≥stico", desc: "Analizamos tu negocio y necesidades espec√≠ficas" },
            { step: 2, title: "Propuesta", desc: "Dise√±amos una soluci√≥n personalizada con ROI claro" },
            { step: 3, title: "Implementaci√≥n", desc: "Deployment r√°pido y seguro de la soluci√≥n" },
            { step: 4, title: "Optimizaci√≥n", desc: "Monitoreo continuo y mejora constante" }
          ].map((item, index) => (
            <div class="relative group">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-pink-600 to-purple-600 rounded-lg blur opacity-0 group-hover:opacity-100 transition duration-1000 group-hover:duration-200"></div>
              <div class="relative bg-white p-6 rounded-lg text-center hover:shadow-xl transition-shadow">
                <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-purple-600 text-white rounded-full flex items-center justify-center mx-auto font-bold text-lg mb-4">
                  {item.step}
                </div>
                <h3 class="font-bold text-gray-900 mb-2">{item.title}</h3>
                <p class="text-sm text-gray-600">{item.desc}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ========== TESTIMONIOS CARRUSEL-STYLE ========== -->
    <section id="testimonios" class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">{testimonials.title}</h2>
          <p class="text-lg text-gray-600">{testimonials.subtitle}</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {testimonials.items.map((testimonial, index) => (
            <div class="bg-gradient-to-br from-purple-50 to-pink-50 p-8 rounded-2xl border-2 border-purple-200 hover:border-purple-400 hover:shadow-lg transition-all">
              <div class="flex text-yellow-400 mb-4">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>
              <p class="text-gray-700 leading-relaxed italic mb-6">"{testimonial.quote}"</p>
              <div class="flex items-center">
                <img
                  src={testimonial.avatar}
                  alt={testimonial.author}
                  class="w-12 h-12 rounded-full object-cover mr-4"
                />
                <div>
                  <p class="font-bold text-gray-900">{testimonial.author}</p>
                  <p class="text-sm text-gray-600">{testimonial.role}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ========== CTA EXPLOSIVA ========== -->
    <section class="py-20 bg-gradient-to-r from-purple-600 via-pink-600 to-purple-600 text-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-20">
        <div class="absolute top-0 left-10 w-64 h-64 bg-white rounded-full mix-blend-multiply filter blur-3xl animate-blob"></div>
        <div class="absolute -bottom-8 right-10 w-64 h-64 bg-white rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000"></div>
      </div>

      <div class="relative max-w-3xl mx-auto px-4 text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">{cta.title}</h2>
        <p class="text-xl text-purple-100 mb-8">{cta.subtitle}</p>
        <p class="text-lg font-bold mb-8 text-yellow-300">{cta.urgency}</p>
        <a
          href={cta.ctaHref}
          class="inline-block px-10 py-5 bg-white text-purple-600 font-bold rounded-lg hover:shadow-2xl transition-all duration-300 transform hover:scale-105 text-lg"
        >
          {cta.ctaText}
        </a>
      </div>
    </section>

    <!-- ========== CONTACTO ========== -->
    <section id="contacto" class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-4">{contact.title}</h2>
        <p class="text-center text-gray-600 mb-12">{contact.subtitle}</p>
        <ContactForm />
      </div>
    </section>
  </main>

  <Footer
    companyName={footer.companyName}
    tagline={footer.tagline}
    navLinks={footer.navLinks}
    contactInfo={footer.contactInfo}
  />

  <FloatingButtons
    whatsappNumber={floatingButtons.whatsapp.number}
    email={floatingButtons.email.address}
  />

  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(20px); }
    }

    @keyframes blob {
      0%, 100% { transform: translate(0, 0) scale(1); }
      33% { transform: translate(30px, -50px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
    }

    .animate-float {
      animation: float 6s ease-in-out infinite;
    }

    .animate-blob {
      animation: blob 7s infinite;
    }

    .animation-delay-2000 {
      animation-delay: 2s;
    }
  </style>
</Layout>