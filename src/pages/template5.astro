---
/**
 * TEMPLATE 5: PREMIUM ELEGANTE (DARK MODE)
 * Dise√±o sofisticado, lujo, para empresas premium y high-end.
 * Perfecto para agencias de lujo, consultor√≠as ejecutivas, fintech.
 * Colores: Negro + Oro + Blanco
 */

import Layout from "../layouts/Layout.astro";
import { clientData } from "../data/client-data.js";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FloatingButtons from "../components/FloatingButtons.astro";
import ContactForm from "../components/ContactForm.astro";

const {
  hero,
  services,
  stats,
  testimonials,
  about,
  footer,
  floatingButtons,
  contact,
  cta,
} = clientData;
---

<Layout title={clientData.seo.title} description={clientData.seo.description}>
  <Header
    logoText="TechVision"
    navLinks={[
      { label: "Servicios", href: "#servicios" },
      { label: "Qui√©nes Somos", href: "#nosotros" },
      { label: "Clientes VIP", href: "#testimonios" },
      { label: "Contacto Ejecutivo", href: "#contacto" },
    ]}
  />

  <main class="bg-black text-white overflow-hidden">
    <!-- ========== HERO PREMIUM ========== -->
    <section
      class="relative min-h-screen bg-black overflow-hidden flex items-center pt-20"
    >
      <!-- Fondo con l√≠neas sutiles -->
      <div class="absolute inset-0 opacity-5">
        <div
          class="absolute inset-0"
          style="background-image: radial-gradient(circle at 1px 1px, #ffffff 1px, transparent 1px); background-size: 50px 50px;"
        >
        </div>
      </div>

      <!-- Accent gradient -->
      <div
        class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-l from-amber-600 to-amber-900 rounded-full blur-3xl opacity-10"
      >
      </div>

      <div
        class="relative max-w-7xl mx-auto px-4 py-20 grid md:grid-cols-2 gap-16 items-center w-full"
      >
        <!-- Contenido -->
        <div class="space-y-8">
          <div class="inline-block">
            <span
              class="text-amber-500 text-sm font-semibold tracking-widest uppercase"
              >‚ú¶ Soluci√≥n Premium</span
            >
          </div>

          <h1 class="text-6xl md:text-7xl font-black text-white leading-tight">
            {hero.title}
          </h1>

          <p class="text-lg text-gray-400 leading-relaxed font-light">
            {hero.subtitle}
          </p>

          <div class="flex flex-col gap-4 pt-8">
            <a
              href={hero.ctaHref}
              class="group relative px-8 py-4 bg-amber-600 hover:bg-amber-500 text-black font-bold rounded text-center transition-all duration-300 overflow-hidden"
            >
              <span class="relative z-10">{hero.ctaText}</span>
            </a>
            <a
              href={hero.secondaryCtaHref}
              class="px-8 py-4 border border-amber-600 text-amber-600 hover:bg-amber-600 hover:text-black transition-all rounded text-center font-semibold"
            >
              {hero.secondaryCtaText}
            </a>
          </div>

          <!-- Trust indicators -->
          <div class="border-t border-amber-600/30 pt-8 mt-8">
            <p class="text-sm text-gray-500 mb-4">
              CONFIANZA DE EMPRESAS L√çDERES
            </p>
            <div class="flex gap-4 flex-wrap">
              <span class="text-amber-500 font-semibold"
                >{stats.items[0].number}</span
              >
              <span class="text-gray-500">‚Ä¢</span>
              <span class="text-gray-400">{stats.items[0].label}</span>
            </div>
          </div>
        </div>

        <!-- Imagen lado derecho -->
        <div class="relative hidden md:block">
          <div
            class="aspect-square bg-gradient-to-br from-amber-900/20 to-black rounded-2xl overflow-hidden border border-amber-600/20"
          >
            <img
              src={hero.backgroundImage}
              alt="Hero"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- ========== SERVICIOS PREMIUM ========== -->
    <section
      id="servicios"
      class="py-20 bg-gradient-to-b from-black to-gray-900"
    >
      <div class="max-w-7xl mx-auto px-4">
        <div class="mb-16">
          <h2 class="text-5xl font-bold text-white mb-4">{services.title}</h2>
          <p class="text-lg text-gray-400">{services.subtitle}</p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            services.items.map((service) => (
              <div class="group bg-gradient-to-br from-gray-900 to-gray-950 border border-amber-600/20 p-8 rounded hover:border-amber-600/50 transition-all duration-300 hover:bg-gray-800">
                <div class="w-12 h-12 bg-amber-600/20 border border-amber-600 rounded flex items-center justify-center text-amber-500 text-2xl mb-4 group-hover:bg-amber-600 group-hover:text-black transition-colors">
                  {service.icon === "design" && "ü§ñ"}
                  {service.icon === "analytics" && "üìä"}
                  {service.icon === "development" && "‚öôÔ∏è"}
                  {service.icon === "strategy" && "üîç"}
                  {service.icon === "marketing" && "üí¨"}
                  {service.icon === "seo" && "üîó"}
                </div>
                <h3 class="text-lg font-bold text-white mb-2">
                  {service.title}
                </h3>
                <p class="text-gray-400 text-sm leading-relaxed">
                  {service.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- ========== N√öMEROS CON ESTILO ========== -->
    <section class="py-20 bg-black">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid md:grid-cols-4 gap-8">
          {
            stats.items.map((stat) => (
              <div class="text-center border-t border-amber-600/30 pt-8">
                <p class="text-5xl font-black text-amber-500 mb-2">
                  {stat.number}
                </p>
                <p class="text-gray-500 text-sm">{stat.label}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- ========== SOBRE NOSOTROS ========== -->
    <section id="nosotros" class="py-20 bg-gray-950">
      <div
        class="max-w-7xl mx-auto px-4 grid md:grid-cols-2 gap-16 items-center"
      >
        <div>
          <h2 class="text-5xl font-bold text-white mb-8">{about.title}</h2>
          <div class="space-y-6">
            {
              about.paragraphs.map((para) => (
                <p class="text-gray-400 leading-relaxed text-lg">{para}</p>
              ))
            }
          </div>
        </div>
        <img
          src={about.imageUrl}
          alt={about.imageAlt}
          class="rounded w-full h-full object-cover border border-amber-600/20"
        />
      </div>
    </section>

    <!-- ========== TESTIMONIOS PREMIUM ========== -->
    <section id="testimonios" class="py-20 bg-black">
      <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-4xl font-bold text-white mb-16">
          Clientes VIP que conf√≠an en nosotros
        </h2>

        <div class="space-y-6">
          {
            testimonials.items.map((testimonial) => (
              <div class="bg-gradient-to-r from-gray-900 to-gray-950 border border-amber-600/20 p-8 rounded hover:border-amber-600/50 transition-all">
                <div class="flex gap-4 mb-4">
                  {[...Array(5)].map(() => (
                    <span class="text-amber-500">‚òÖ</span>
                  ))}
                </div>
                <p class="text-gray-300 leading-relaxed mb-6 italic text-lg">
                  "{testimonial.quote}"
                </p>
                <div class="flex items-center justify-between border-t border-amber-600/20 pt-6">
                  <div class="flex items-center gap-4">
                    <img
                      src={testimonial.avatar}
                      alt={testimonial.author}
                      class="w-12 h-12 rounded-full object-cover border border-amber-600"
                    />
                    <div>
                      <p class="font-bold text-white">{testimonial.author}</p>
                      <p class="text-sm text-amber-500">{testimonial.role}</p>
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- ========== CTA EJECUTIVO ========== -->
    <section class="py-20 bg-gradient-to-r from-black via-amber-950 to-black">
      <div
        class="max-w-3xl mx-auto px-4 text-center border border-amber-600/30 rounded p-12"
      >
        <h2 class="text-4xl font-bold text-white mb-6">{cta.title}</h2>
        <p class="text-lg text-gray-400 mb-8">{cta.subtitle}</p>
        <p class="text-amber-500 font-semibold mb-8">{cta.urgency}</p>
        <a
          href={cta.ctaHref}
          class="inline-block px-10 py-4 bg-amber-600 hover:bg-amber-500 text-black font-bold rounded transition-all duration-300"
        >
          {cta.ctaText}
        </a>
      </div>
    </section>

    <!-- ========== CONTACTO ========== -->
    <section id="contacto" class="py-20 bg-gray-950">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-4xl font-bold text-center text-white mb-4">
          {contact.title}
        </h2>
        <p class="text-center text-gray-400 mb-12">{contact.subtitle}</p>
        <ContactForm />
      </div>
    </section>
  </main>

  <Footer
    companyName={footer.companyName}
    tagline={footer.tagline}
    navLinks={footer.navLinks}
    contactInfo={footer.contactInfo}
  />

  <FloatingButtons
    whatsappNumber={floatingButtons.whatsapp.number}
    email={floatingButtons.email.address}
  />
</Layout>
