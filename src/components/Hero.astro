---
// src/components/Hero.astro
const {
  title,
  subtitle,
  ctaText,
  ctaHref,
  secondaryCtaText,
  secondaryCtaHref,
  backgroundImage // Soporte para imagen de fondo
} = Astro.props;
---

<section
  class="relative min-h-[80vh] flex flex-col justify-center items-center text-center px-4 py-20 overflow-hidden"
  aria-labelledby="hero-title"
>
  {backgroundImage ? (
    <div class="absolute inset-0 z-0">
      <img src={backgroundImage} alt="" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-black/60"></div> </div>
  ) : (
    /* Fondo por defecto con gradiente si no hay imagen */
    <div class="absolute inset-0 bg-gradient-to-br from-primary/90 to-primary z-0"></div>
  )}

  <div class="relative z-10 max-w-4xl mx-auto animate-fade-in">
    <h1
      id="hero-title"
      class="text-4xl sm:text-5xl md:text-7xl font-extrabold mb-6 text-white drop-shadow-sm leading-tight"
    >
      {title}
    </h1>

    <p class="text-lg sm:text-xl md:text-2xl mb-10 max-w-2xl mx-auto text-white/90 leading-relaxed">
      {subtitle}
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href={ctaHref}
        class="inline-flex items-center justify-center bg-white text-primary font-bold px-8 py-4 rounded-full hover:bg-gray-100 transition-all transform hover:scale-105 shadow-xl focus:ring-4 focus:ring-white/30"
      >
        {ctaText}
      </a>

      {secondaryCtaText && secondaryCtaHref && (
        <a
          href={secondaryCtaHref}
          class="inline-flex items-center justify-center border-2 border-white/80 text-white font-bold px-8 py-4 rounded-full hover:bg-white/10 transition-all focus:ring-4 focus:ring-white/30 backdrop-blur-sm"
        >
          {secondaryCtaText}
        </a>
      )}
    </div>
  </div>
</section>
